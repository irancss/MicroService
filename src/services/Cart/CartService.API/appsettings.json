{
  "Service": {
    "Name": "cart-service",
    "Version": "1.0.0",
    "InstanceId": "cart-service-01",
    "Address": "localhost",
    "Port": 5011 // یک پورت جدید برای این سرویس
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Hangfire": "Information"
    }
  },
  "Consul": {
    "Address": "http://localhost:8500"
  },
  "IdentityServer": {
    "Authority": "https://localhost:7051", // آدرس IdentityServer
    "Audience": "microservice"
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Redis": "localhost:6379",
    "Database": "Server=localhost;Port=5432;Database=cart_db;User Id=user;Password=123;"
  },
  "GrpcSettings": {
    "InventoryServiceUrl": "https://localhost:5001",
    "CatalogServiceUrl": "https://localhost:5002"
  },
  "RabbitMQ": {
    "Host": "localhost",
    "VirtualHost": "/",
    "Username": "guest",
    "Password": "guest"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Hangfire": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/cart-service-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}
