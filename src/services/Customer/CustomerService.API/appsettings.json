{
  "Service": {
    "Name": "customer-service",
    "Version": "1.0.0",
    "InstanceId": "customer-service-01",
    "Address": "localhost",
    "Port": 5020
  },
  "ConnectionStrings": {
    // فقط رشته اتصال اصلی این میکروسرویس
    "DefaultConnection": "Host=localhost;Port=5432;Database=customer_db;Username=postgres;Password=123",
    // رشته اتصال Redis برای کشینگ (اگر نیاز باشد)
    "Redis": "localhost:6379"
  },
  "RabbitMQ": {
    "Host": "localhost",
    "VirtualHost": "/",
    "Username": "guest",
    "Password": "guest"
  },
  "Consul": {
    "Address": "http://localhost:8500"
  },
  "IdentityServer": {
    "Authority": "http://localhost:5062",
    "Audience": "user.api" // یا هر Audience دیگری که برای این سرویس تعریف شده
  },
  "Outbox": {
    "IntervalInSeconds": 5,
    "BatchSize": 100
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Properties": {
      "Application": "customer-service"
    }
  },
  "AllowedHosts": "*"
}