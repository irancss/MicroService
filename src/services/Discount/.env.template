# Discount Service Environment Configuration
# Copy this file to .env and update the values as needed

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=DiscountServiceDb
DB_USER=postgres
DB_PASSWORD=yourpassword

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# JWT Configuration
JWT_KEY=YourSuperSecretJwtKeyThatIsAtLeast256BitsLong!
JWT_ISSUER=DiscountService
JWT_AUDIENCE=DiscountServiceClients
JWT_EXPIRY_HOURS=24

# API Configuration
API_PORT=8080
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080

# Logging Configuration
LOG_LEVEL=Information
LOG_FILE_PATH=logs/discount-service-.log

# Performance Configuration
CACHE_EXPIRY_MINUTES=10
MAX_PAGE_SIZE=100
CONNECTION_POOL_SIZE=20

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS=true

# External Services
NOTIFICATION_SERVICE_URL=http://localhost:9001
USER_SERVICE_URL=http://localhost:9002
PRODUCT_SERVICE_URL=http://localhost:9003
