{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "ProductService": "Debug" // لاگ بیشتر برای سرویس خودتان
        }
    },
    "AllowedHosts": "*",
    "MongoDbSettings": {
        "ConnectionString": "mongodb://localhost:27017",
        "DatabaseName": "ProductCatalogDb",
        "ProductsCollectionName": "Products",
        "ReviewsCollectionName": "Reviews",
        "QuestionsCollectionName": "Questions"
    },
    "MinioSettings": { // جایگزین S3Settings
        "ServiceUrl": "http://localhost:9000", // آدرس سرویس MinIO
        "AccessKey": "YOUR_MINIO_ACCESS_KEY", // از متغیرهای محیطی یا Vault استفاده کنید
        "SecretKey": "YOUR_MINIO_SECRET_KEY", // از متغیرهای محیطی یا Vault استفاده کنید
        "BucketName": "product-media", // نام باکت در MinIO
        "UseHttps": false,
        "PresignedUrlExpirationMinutes": 15,
        "PendingUploadPrefix": "pending-uploads/"
    },
    "KafkaSettings": {
        "BootstrapServers": "localhost:9092",
        "ProductChangeTopic": "products.cud"
    },
    "CdnSettings": {
        // آدرس CDN که به MinIO Bucket شما اشاره می‌کند
        // یا اگر مستقیم از MinIO سرو می‌کنید، می‌تواند ServiceUrl باشد (اما CDN بهتر است)
        "BaseUrl": "http://localhost:9000/product-media" // مثال برای دسترسی مستقیم (بدون CDN)
        // "BaseUrl": "https://cdn.yourdomain.com" // مثال با CDN
    },
    "RedisSettings": {
        "ConnectionString": "localhost:6379", // آدرس Redis
        "AbortOnConnectFail": false
    },
    "ServiceUrls": {
        // آدرس سرویس های دیگر که توسط این سرویس فراخوانی می‌شوند
        "DiscountApi": "http://localhost:5002", // آدرس سرویس تخفیف
        "InventoryApi": "http://localhost:5003" // آدرس سرویس موجودی (اگر نیاز به فراخوانی باشد)
    },
    "OpenTelemetry": { // تنظیمات OTLP Exporter (اگر استفاده شود)
        "OtlpExporterEndpoint": "http://localhost:4317"
    }
}